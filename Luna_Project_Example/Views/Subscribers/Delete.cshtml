@model Luna_Project_Example.Models.Subscriber

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Subscriber</h4>
    <link rel="stylesheet" href="~/Buttons.css">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Name: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            @Html.DisplayName("Surname: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.surname)
        </dd>

        <dt>
            @Html.DisplayName("Subscribed Meter ID: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.meter_meterID)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="deleteButton" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "backButton" })
